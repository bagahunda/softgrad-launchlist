.footer
  z-index: 2
  position fixed
  bottom -2px
  left 50%
  width 100%
  max-width: 60em
  transform: translateX(-50%);
  padding 1em
  font-size: 1.3rem
  border-radius: 4px
  box-shadow: 0 15px 35px rgba(50,50,93,.1),0 5px 15px rgba(0,0,0,.07)
  background #ffffff

  +below(600px)
    // position relative
    // left auto
    // width 100%
    // transform: none
    width 100%
    font-size: 1rem
    box-shadow: none
    background #ececec

.status
  display flex
  justify-content: space-between
  align-items: center

  +below(600px)
    flex-direction: column
